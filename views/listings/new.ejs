<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h2 class="mt-3">Add a new Scholarship</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]", 
                placeholder="Scholarship name" 
                type="text" 
                class="form-control", required/>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]", 
                placeholder="Scholarship description" 
                class="form-control", required></textarea>
                <div class="invalid-feedback">please enter a valid Description</div>
        </div>
        
        <div class="mb-3">
            <lable for="amount" class="form-label">Amount</lable>
            <input name="listing[amount]", 
                placeholder="Scholarship amount" 
                class="form-control", required/>
                <div class="invalid-feedback">please enter a valid Amount</div>    
        </div >

        <div class="mb-3">
            <lable for="link" class="form-label">Apply_link</lable>
            <input name="listing[apply_link]", 
                placeholder="Scholarship URL/link" 
                type="text", 
                class="form-control", required/>
            <div class="invalid-feedback">please enter a valid URL</div>
        </div>
       
        <div class="mb-3">
            <lable for="deadline" class="form-label">Deadline</lable>
            <input name="listing[deadline]", 
                placeholder="Scholarship deadline" 
                type="date",
                class="form-control", required/>
                <div class="invalid-feedback">please enter a valid Date</div>
        </div>
        
        <button class="btn tbn-dark add-btn">Add Scholarship</button>
    </form>
</div>
</div>
