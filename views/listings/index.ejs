<% layout("/layouts/boilerplate") %> 
<body>
    <h4></h4>
    <h3>All Scholarships</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
        <% for(let listing of allListing) { %>
            <div class="card col" style="width: 20rem;">
                <div class="card-body">
                  <h5 class="card-title"><b><%=listing.title%></b></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><b>Description</b></h6>
                  <p class="card-text"><%= listing.description%>.</p>
                  <a href="/listings/<%=listing._id%>" class="btn btn-primary">Detail</a>
                  <% if(currUser) { %>
                    <a href="<%=listing.apply_link%>" class="btn btn-primary" target="_blank">Apply</a>
                  <% } %>
                </div>
            </div>
            <% } %>
    </div>
    
</body>


